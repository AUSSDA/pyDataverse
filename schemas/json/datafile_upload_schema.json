{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://github.com/AUSSDA/pyDataverse/schemas/json/datafile_upload_schema.json",
    "type": "object",
    "title": "Datafile JSON upload schema",
    "description": "Describes the full Datafile metadata JSON file structure for a Dataverse API upload.",
    "default": {},
    "examples": [
        {
            "description": "Another data file.",
            "categories": [
                "Documentation"
            ],
            "restrict": true,
            "pid": "doi:10.11587/NVWE8Y",
            "filename": "20001_ta_de_v1_0.pdf",
            "title": "Questionnaire",
            "directoryLabel": "data/subdir1"
        }
    ],
    "required": [
        "pid",
        "filename"
    ],
    "additionalProperties": false,
    "properties": {
        "description": {
            "$id": "#/properties/description",
            "type": "string",
            "title": "The description schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "Another data file."
            ]
        },
        "categories": {
            "$id": "#/properties/categories",
            "type": "array",
            "title": "The categories schema",
            "description": "An explanation about the purpose of this instance.",
            "default": [],
            "examples": [
                [
                    "Documentation"
                ]
            ],
            "additionalItems": true,
            "items": {
                "anyOf": [
                    {
                        "$id": "#/properties/categories/items/anyOf/0",
                        "type": "string",
                        "title": "The first anyOf schema",
                        "description": "An explanation about the purpose of this instance.",
                        "default": "",
                        "examples": [
                            "Documentation"
                        ]
                    }
                ],
                "$id": "#/properties/categories/items"
            }
        },
        "restrict": {
            "$id": "#/properties/restrict",
            "type": "boolean",
            "title": "The restrict schema",
            "description": "An explanation about the purpose of this instance.",
            "default": false,
            "examples": [
                true
            ]
        },
        "pid": {
            "$id": "#/properties/pid",
            "type": "string",
            "title": "The pid schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "doi:10.11587/NVWE8Y"
            ]
        },
        "filename": {
            "$id": "#/properties/filename",
            "type": "string",
            "title": "The filename schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "20001_ta_de_v1_0.pdf"
            ]
        },
        "title": {
            "$id": "#/properties/title",
            "type": "string",
            "title": "The title schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "Questionnaire"
            ]
        },
        "directoryLabel": {
            "$id": "#/properties/directoryLabel",
            "type": "string",
            "title": "The directoryLabel schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "data/subdir1"
            ]
        }
    }
}
